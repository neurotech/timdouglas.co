{
  "name": "timdouglas.co",
  "version": "1.0.0",
  "description": "Source for http://timdouglas.co",
  "main": "index.js",
  "scripts": {
    "prebuild": "mkdir -p build/images/ build/css/ build/js/",
    "tachyons": "cp node_modules/tachyons/css/tachyons.min.css build/css/",
    "postcss": "postcss -u postcss-cssnext -o build/css/index.css src/css/index.pcss",
    "build-css": "yarn run tachyons && yarn run postcss",
    "build-images": "cp src/images/* build/images/",
    "build-favicon": "cp src/favicon.png build/favicon.png",
    "build": "pug src/pug/ --out build/ && rm -rf build/includes && yarn run build-css",
    "watch": "watch --interval 1 'yarn run build' src/",
    "browser-sync": "browser-sync start --server build --files '**/*.htm' '**/*.js' '**/index.css' '**/*.html'",
    "predeploy": "yarn run build",
    "deploy": "./s3.sh"
  },
  "repository": {
    "type": "git",
    "url": "https://www.github.com/neurotech/timdouglas.co"
  },
  "private": true,
  "author": "Tim Douglas",
  "license": "ISC",
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "ie >= 9"
  ],
  "stylelint": "",
  "devDependencies": {
    "semistandard": "10.0.0",
    "watch": "1.0.2"
  },
  "dependencies": {
    "postcss-cli": "^2.6.0",
    "postcss-cssnext": "^2.9.0",
    "pug": "^2.0.0-beta10",
    "pug-cli": "^1.0.0-alpha6",
    "tachyons": "^4.6.2",
    "tachyons-cli": "^1.0.10"
  }
}
